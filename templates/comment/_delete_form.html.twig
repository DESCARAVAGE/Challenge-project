<form method="post" action="{{ path('challenge_comment_delete', {'id': comment.id, 'slug': challenge.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer ce commentaire?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn btn-danger m-2">Supprimer<i class="bi bi-trash3-fill ms-2"></i></button>
</form>
