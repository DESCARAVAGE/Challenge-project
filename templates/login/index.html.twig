{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Login
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<section class="container-fluid">
		<form action="{{ path('login') }}" method="post">
			<div class="row">
				<div class="col-lg-6 col-md-12 mt-2 d-flex justify-content-center">
					<label for="username">Username:</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="nom d'utilisateur"/>
				</div>
				<div class="col-lg-6 col-md-12 mt-2 d-flex justify-content-center">
					<label for="password">Password:</label>
					<input type="password" id="password" name="_password" placeholder="......."/>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-flex justify-content-center mt-4">
					<button type="submit" class="btn btn-primary bg-secondary border-0 p-3">login</button>
				</div>
			</div>
		</form>
	</section>


{% endblock %}
