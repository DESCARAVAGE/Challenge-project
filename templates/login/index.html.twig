{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block title %}
	{{ parent() }}
	| Login
{% endblock %}

{% block body %}
	<main class="bloc d-flex align-items-center">
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<section class="container">
			<div class="d-flex justify-content-between">
				<a class="arrow ms-5 text-decoration-none text-secondary" href="{{ path('welcome') }}">
					<i class="bi bi-arrow-left fs-3">Welcome</i>

				</a>
				<a class="homeLogin ps-1 text-decoration-none text-secondary" href="{{ path('home') }}">
					<i class="bi bi-house-door-fill fs-2 d-flex justify-content-center"></i>
					<p class="">
						<strong>Challenges</strong>
					</p>
				</a>
			</div>
			<header>
				<h1 class="text-center text-light mb-5">Come !</h1>
			</header>
			<form action="{{ path('login') }}" method="post" class="w-50 mx-auto mb-5">
				<div class="d-flex gap-5">
					<label for="username" class="form-label text-light">Username</label>
					<input class="form-control mb-3" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="nom d'utilisateur"/>
				</div>
				<div class="d-flex gap-5">
					<label for="password" class="form-label text-light">Password</label>
					<input class="form-control md-3" type="password" id="password" name="_password"/>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-flex justify-content-center align-items-center mt-4">
					<button type="submit" class="btn btn-primary bg-secondary border-1 border-light p-3 m-2 me-2">login</button>
					<a href=" {{ path('register') }}" class="btn border-1 border-light p-3 ms-2 text-light">Sign in</a>
				</div>

			</form>
		</section>
	</main>


{% endblock %}
