<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
        <title>
            {% block title %}Challenge project{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}
        {% endblock %}
        <style>
            .filter{
                display: block;
                position: sticky;
                top: 20px;
            }
        </style>

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block  header %}
            {% if app.request.attributes.get('_route') != 'welcome' %}
                {% include 'components/_navbar.html.twig' %}
            {% endif %}
        {% endblock %}
        {% block flash %}
            {% include 'components/_flash.html.twig' %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
